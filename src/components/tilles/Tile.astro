---
const {color, ImageComponent} = Astro.props;
---

<div class="relative">
    <div class="h-[314px] w-[364px]">
        <div class=`float-left border-r-[91px] border-r-main border-t-[157px] border-b-[157px] border-y-transparent` />
        <div class=`float-left w-[181px] h-[314px] bg-main` />
        <div class=`float-left border-l-[91px] border-l-main border-t-[157px] border-b-[157px] border-y-transparent` />
    </div>
    <div class="absolute top-[1px] left-[1.5px] h-[312px] w-[360px]">
        <div class=`float-left border-r-[90px] border-r-${color} border-t-[156px] border-b-[156px] border-y-transparent` />
        <div class=`float-left w-[180px] h-[312px] bg-${color}` />
        <div class=`float-left border-l-[90px] border-l-${color} border-t-[156px] border-b-[156px] border-y-transparent` />
    </div>
    {ImageComponent && <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"><ImageComponent className="w-[350px] h-[350px]" /></div>}
</div>