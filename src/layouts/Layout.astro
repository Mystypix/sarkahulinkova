---
import Navigation from "../components/Navigation.astro";
import { ViewTransitions } from 'astro:transitions';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en' class='scroll-smooth'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
        <style>
            @font-face {
                font-family: "sh";
                src: url("sh.woff2") format("woff2"), url("sh.woff") format("woff");
                font-weight: normal;
                font-style: normal;
            }
        </style>
	</head>
	<body>
        <Navigation />
		<slot />
	</body>
</html>
<style is:global>
	body {
		margin: 0;
	}
</style>